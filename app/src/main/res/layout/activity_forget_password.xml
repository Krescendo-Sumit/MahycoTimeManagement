<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forget_password"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/mahycogrow"
            android:layout_marginLeft="110dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/txtentermobile"
                android:inputType="number"
                android:maxLength="10"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/border_style"
                android:drawableLeft="@drawable/user"
                android:ems="10"
                android:hint="Enter Your Code"
                android:text=""
                android:textColorLink="@android:color/black" />

            <EditText
                android:id="@+id/txtEnterotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtentermobile"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_style"
                android:drawableLeft="@drawable/userlock"
                android:ems="10"
                android:maxLength="16"
                android:hint="Set Your Password"
                android:inputType="textPassword"
                android:text=""
                android:textColorLink="@android:color/black"
                />





                <androidx.cardview.widget.CardView
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txtEnterotp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#398B39"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtotp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Update Password"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
                </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/lbltype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="400dp"
                android:text=""
                android:textColor="#398B39"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="invisible"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>